{
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "extends": [
    "recommended/esnext",
    "recommended/esnext/style-guide",
    "recommended/node",
    "recommended/node/style-guide"
  ],
  "rules": {
    "one-var": 1,
    "no-console": 0,
    "import/no-nodejs-modules": 0,
    "import/no-commonjs": 0,
    "no-var": 0,
    "no-unused-vars": ["error", { "vars": "all", "args": "none", "ignoreRestSiblings": true }],
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jquery": true,
    "mongo": true
  }
}
