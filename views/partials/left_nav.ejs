<div class="col-md-3 left_col">
  <div class="left_col scroll-view">
  <div class="navbar nav_title" style="border: 0;">
    <a class="site_title"></i> <span>MentorMap</span></a>
  </div>

  <div class="clearfix"></div>

  <!-- menu profile quick info -->
  <div class="profile">
    <div class="profile_pic">
      <img src="/base/images/user.png" alt="..." class="img-circle profile_img">
    </div>
    <div class="profile_info">
      <span>Welcome,</span>
      <h2><%= user.profile.first_name+' '+user.profile.last_name %></h2>
    </div>
  </div>
  <!-- /menu profile quick info -->

  <br />
  <br />
  <br />
  <br />
  <br />

  <!-- sidebar menu -->
  <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">
    <div class="menu_section">
      <h3 style="padding-left: 17px;"><%= user.role || 'Error' %></h3>
    </div>
    <div class="menu_section">
      <h3>Menu</h3>
      <ul class="nav side-menu">
		 <% if (user.role === 'mentee' && user.completed) { %>
			<li><a href='/mentee/dashboard'><i class="fa fa-home"></i> My Dashboard <span class="fa"></span></a></li>
	        <li><a href="/mentee/my-mentors"><i class="fa fa-comments-o"></i> View My Mentors <span class="fa"></span></a></li>
