			<li><a href="/mentee/review"><i class="fa fa-edit"></i> Leave Us A Review <span class="fa"></span></a></li>
		    <li><a href="/mentee/help"><i class="fa fa-question-circle"></i> Help <span class="fa"></span></a></li>
			<li><a href="/mentee/inquery"><i class="fa fa-envelope-o"></i> Contact Us <span class="fa"></span></a></li>
		<% } else if (user.role === 'mentor' && user.completed){ %>
			<li><a href='/mentor/dashboard'><i class="fa fa-home"></i> My Dashboard <span class="fa"></span></a></li>
			<li><a href="/mentor/my-mentees"><i class="fa fa-comments-o"></i> View My Mentees <span class="fa"></span></a></li>
			<li><a href="/mentor/mentor-list"><i class="fa fa-table"></i> View Other Mentors <span class="fa"></span></a></li>
			<li><a href="/mentor/review"><i class="fa fa-edit"></i> Leave Us A Review <span class="fa"></span></a></li>
			<li><a href="/mentor/help"><i class="fa fa-question-circle"></i> Help <span class="fa"></span></a></li>
			<li><a href="/mentor/inquery"><i class="fa fa-envelope-o"></i> Contact Us <span class="fa"></span></a></li>
