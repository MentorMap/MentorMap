<div class="right_col" role="main">
  <!-- complete profile -->
  <div class="complete-registration">

    <div class="row">

      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Complete Registration<small>You must complete registration to start mentor matching</small></h2>
            <ul class="nav navbar-right panel_toolbox">
              <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
              </li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                  <li><a href="#">Settings 1</a>
                  </li>
                  <li><a href="#">Settings 2</a>
                  </li>
                </ul>
              </li>
              <li><a class="close-link"><i class="fa fa-close"></i></a>
              </li>
            </ul>
            <div class="clearfix"></div>
          </div>
          <div class="x_content">


            <!-- Smart Wizard -->
            <p>This wizard will walk you through the sign up process.</p>
            <div id="wizard" class="form_wizard wizard_horizontal">
              <ul class="wizard_steps">
                <li>
                  <a href="#step-1">
                    <span class="step_no">1</span>
                    <span class="step_descr">
                                      Step 1<br />
                                      <small>Personal Profile</small>
                                  </span>
                  </a>
                </li>
                <li>
                  <a href="#step-2">
                    <span class="step_no">2</span>
                    <span class="step_descr">
                                      Step 2<br />
                                      <small>Academic Information</small>
                                  </span>
                  </a>
                </li>
                <li>
                  <a href="#step-3">
                    <span class="step_no">4</span>
                    <span class="step_descr">
                                      Step 3<br />
                                      <small>Additional Information</small>
                                  </span>
                  </a>
                </li>
                <li>
                  <a href="#step-4">
                    <span class="step_no">5</span>
                    <span class="step_descr">
                                      Step 4<br />
                                      <small>Terms of Service</small>
                                  </span>
                  </a>
                </li>
              </ul>
              <div id="step-1">
                <h2 class="StepTitle">Step 1 - Personal Profile</h2>
                <p>Just for our information</p>
                <form id="form-step-1" method="post" class="form-horizontal form-label-left">

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">First Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left" id="first-name" required="required" readonly value=<%= user.profile.first_name %> >
                      <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="last-name">Last Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input type="text" class="form-control col-md-7 col-xs-12 has-feedback-left" id="last-name" required="required" readonly value=<%= user.profile.last_name %> >
                      <span class="fa fa-user form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Email <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input id="email" type="email" class="form-control col-md-7 col-xs-12 has-feedback-left" required="required" readonly value=<%= user.email %> >
                      <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Confirm Email <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input id="email2" type="email" class="form-control col-md-7 col-xs-12 has-feedback-left" required="required" placeholder="e.g. example@host.com">
                      <span class="fa fa-envelope form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Gender <span class="required">*</span></label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <span style="padding-right: 2px;">Male:</span><input type="radio" class="flat" name="gender" id="genderM" value="male"/>
                        <span style="padding: 0px 5px;">Female:</span><input type="radio" class="flat" name="gender" id="genderF" value="female" style="padding-right: 5px"/>
                        <span style="padding: 0px 5px;">Other:</span><input type="radio" class="flat" name="gender" id="genderF" value="other" style="padding-right: 5px"/>
                        <span style="padding: 0px 5px;">Prefer Not to Disclose:</span><input type="radio" class="flat" name="gender" id="genderF" value="na" style="padding-right: 5px"/>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Phone Number <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input id="phone" name="phone" class="form-control col-md-7 col-xs-12 has-feedback-left" placeholder="e.g. (999) 999-9999" data-inputmask="'mask' : '(999) 999-9999'" required="required" type="text">
                      <span class="fa fa-phone form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">High School <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input id="school" name="high_school" class="form-control col-md-7 col-xs-12 has-feedback-left" required="required" type="text" placeholder="e.g. Bayview Secondary School">
                      <span class="fa fa-institution form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Grade <span class="required">*</span></label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <select class="select2_single form-control" tabindex="-1" name="grade">
                        <option></option>
                        <option value=9>9</option>
                        <option value=10>10</option>
                        <option value=11>11</option>
                        <option value=12>12</option>
                        <option value=13>13</option>
                      </select>
                    </div>
                  </div>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Linkedin &nbsp
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <input id="linkedin" name="linkedin" class="form-control col-md-7 col-xs-12 has-feedback-left" placeholder="e.g. www.example.com" required="required" type="text">
                      <span class="fa fa-linkedin form-control-feedback left" aria-hidden="true"></span>
                    </div>
                  </div>

                </form>

              </div>
              <div id="step-2">
                <h2 class="StepTitle">Step 2 - Academic Information</h2>
                <p>Let us get to know you better</p>
                <form id="form-step-2" action="/mentee-complete" method="post" class="form-horizontal form-label-left">

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Your Grade 11 Average <span class="required">*</span></label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <div class="radio">
                        <label style="padding-right: 10px;">
                          <input type="radio" value="4" id="optionsRadios1" name="avg_11"> 100%-95%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="3" id="optionsRadios2" name="avg_11"> 94%-90%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="2" id="optionsRadios2" name="avg_11"> 89%-85%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="1" id="optionsRadios2" name="avg_11"> 84%-75%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="0" id="optionsRadios2" name="avg_11"> Below 75%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="-1" id="optionsRadios2" name="avg_11"> N/A
                        </label>
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Your Grade 12 Average <span class="required">*</span></label>

                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <div class="radio">
                        <label style="padding-right: 10px;">
                          <input type="radio" value="4" id="optionsRadios1" name="avg_12"> 100%-95%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="3" id="optionsRadios2" name="avg_12"> 94%-90%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="2" id="optionsRadios2" name="avg_12"> 89%-85%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="1" id="optionsRadios2" name="avg_12"> 84%-75%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="0" id="optionsRadios2" name="avg_12"> Below 75%
                        </label>
                        <label style="padding-right: 10px;">
                          <input type="radio" value="-1" id="optionsRadios2" name="avg_12"> N/A
                        </label>
                      </div>
                    </div>
                  </div>


                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">You Are Enrolled In <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12 has-feedback">
                      <div class="checkbox">
                          <input type="checkbox" class="flat" name="high_school_programs" value="AP"> AP (Advanced Placement)
                      </div>
                      <div class="checkbox">
                          <input type="checkbox" class="flat" name="high_school_programs" value="IB"> IB (International Baccalaureate)
                      </div>
                      <div class="checkbox">
                          <input type="checkbox" class="flat" name="high_school_programs" value="TOPS"> TOPS (Talented Offerings for Programs in the Sciences)
                      </div>
                      <div class="checkbox">
                          <input type="checkbox" class="flat" name="high_school_programs" value="ESL"> ESL (English as a Second Language)
                      </div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Your Skills And Extracurriculars</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <input id="tags_1" type="text" class="tags form-control" name="skills" />
                      <div id="suggestions-container" style="position: relative; float: left; width: 250px; margin: 10px;"></div>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Preferred Post Secondary Institutions</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <select class="select2_multiple_3 form-control" multiple="multiple" name="preferred_school">
                        <option></option>
                        <option value="University of Waterloo">University of Waterloo</option>
                        <option value="University of Toronto">University of Toronto</option>
                        <option value="University of Western Ontario">University of Western Ontario</option>
                        <option value="University of British Columbia">University of British Columbia</option>
                        <option value="York University">York University</option>
                      </select>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Preferred Major Fields of Study</label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <select class="select2_multiple_2 form-control" multiple="multiple" name="preferred_program">
                        <option></option>
                        <option value="med">Medicine and Health Sciences</option>
                        <option value="cs">Computer Science</option>
                        <option value="eng">Engineering and Applied Sciences</option>
                        <option value="math">Mathematics and Physics</option>
                        <option value="fin">Accounting, Finance and Financial Mathematics</option>
                        <option value="econ">Business, Economics and Commerce</option>
                        <option value="arts">Arts and Humanities</option>
                        <option value="sci">Natural Sciences (Biology, Chemistry, Earth and Space)</option>
                        <option value="law">Political Science, Law and Societal Studies</option>
                        <option value="soci">Social Sciences (Psychology, Sociology, Nutrition Science)</option>
                      </select>
                    </div>
                  </div>



                </form>
              </div>
              <div id="step-3">
                <h2 class="StepTitle">Step 3 Additional Information</h2>
                <p>Provide us with some more information to help us better match you with a suitable mentor</p>
                <form id="form-step-3" class="form-horizontal form-label-left">

                  <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <label class="control-label" for="textarea">What are you looking for in a mentor?</label>
                      <textarea id="additional-info1" name="paragraphs" class="form-control col-md-7 col-xs-12" required="required"></textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <label class="control-label" for="textarea">Tell us more about your future goals.</label>
                      <textarea id="additional-info2" name="paragraphs" class="form-control col-md-7 col-xs-12" required="required"></textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <label class="control-label" for="textarea">What Motivated You to Look For a Mentor?</label>
                      <textarea id="additional-info2" name="paragraphs" class="form-control col-md-7 col-xs-12" required="required"></textarea>
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                      <label class="control-label" for="textarea">Feel Free to Tell Us Anything Else. </label>
                      <textarea id="additional-info3" name="paragraphs" class="form-control col-md-7 col-xs-12" required="required"></textarea>
                    </div>
                  </div>
                </form>
                <div class="col-md-12 col-sm-12 col-xs-12">
                  <label class="control-label" for="textarea">Drop Us Your Resume If You Have One</label>
                  <form action="form_upload.html" class="dropzone"></form>
                </div>
              </div>
